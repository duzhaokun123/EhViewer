<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hippo.widget.ContentLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.hippo.ehviewer.widget.SearchBar
        android:id="@+id/search_bar"
        style="@style/CardView.Normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/gallery_search_bar_margin_h"
        android:layout_marginVertical="@dimen/gallery_search_bar_margin_v" />

    <com.hippo.widget.FabLayout
        android:id="@+id/fab_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="@dimen/corner_fab_margin"
        android:paddingBottom="@dimen/corner_fab_margin">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            style="@style/Widget.MaterialComponents.FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="?attr/widgetColorThemeAccent"
            app:fabSize="mini"
            app:srcCompat="@drawable/v_heart_box_dark_x24"
            app:tint="#fff" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            style="@style/Widget.MaterialComponents.FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="?attr/widgetColorThemeAccent"
            app:fabSize="mini"
            app:srcCompat="@drawable/v_go_to_dark_x24"
            app:tint="#fff" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            style="@style/Widget.MaterialComponents.FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="?attr/widgetColorThemeAccent"
            app:fabSize="mini"
            app:srcCompat="@drawable/v_refresh_dark_x24"
            app:tint="#fff" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            style="@style/Widget.MaterialComponents.FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:backgroundTint="?attr/widgetColorThemeAccent"
            app:fabSize="mini"
            app:srcCompat="@drawable/v_download_x24"
            app:tint="#fff" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            style="@style/Widget.MaterialComponents.FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:backgroundTint="?attr/widgetColorThemeAccent"
            app:fabSize="mini"
            app:srcCompat="@drawable/v_delete_x24"
            app:tint="#fff" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            style="@style/Widget.MaterialComponents.FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:backgroundTint="?attr/widgetColorThemeAccent"
            app:fabSize="mini"
            app:srcCompat="@drawable/v_folder_move_x24"
            app:tint="#fff" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            style="@style/Widget.MaterialComponents.FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="?attr/widgetColorThemePrimary"
            app:tint="#fff" />

    </com.hippo.widget.FabLayout>
</FrameLayout>
